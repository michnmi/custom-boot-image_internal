{
  "_comment": "sudo  -u packer  -s /bin/bash; PACKER_LOG=1 packer build  -var-file variables.json ubuntu18.04_baseos.json",
  "description": "KVM VM based on Ubuntu 18.04 LTS",
  "variables": {
    "vault_password": "{{ env `VAULT_PASSWD` }}"
  },
  "builders": [
    {
      "name": "ubuntu18.04_baseos",
      "type": "qemu",
      "accelerator": "kvm",
      "vm_name": "{{ user `output_vm_name` }}",
      "format": "qcow2",
      "iso_url": "{{ user `source_iso_url` }}",
      "iso_checksum": "{{ user `source_iso_checksum` }}",
      "iso_checksum_type": "sha256",
      "disk_image": true,
      "disk_size": "{{ user `disk_size`}}",
      "disk_interface": "virtio-scsi",
      "disk_discard": "unmap",
      "disk_compression": true,
      "skip_compaction": false,
      "headless": true,
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_private_key_file": "ssh_keys/id_rsa_packer",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; sudo -S sh '/tmp/shutdown.sh'",
      "http_directory": "cloud-init/ubuntu18.04_baseos",
      "qemuargs": [
        [
          "-smbios",
          "type=1,serial=ds=nocloud-net;instance-id=packer;seedfrom=http://{{ .HTTPIP }}:{{ .HTTPPort }}/"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./scripts/download-ansible-repo.sh",
      "expect_disconnect": false,
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive",
        "VAULT_PASSWORD={{ user `vault_password` }}"
      ],
      "execute_command": "sudo -S bash -c \"{{ .Vars }} {{ .Path}}\""
    },
    {
      "type": "shell",
      "script": "./scripts/clean-up.sh",
      "expect_disconnect": false,
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive"
      ],
      "execute_command": "sudo -S bash -c '{{ .Vars }} {{ .Path}}'"
    }
  ]
}
